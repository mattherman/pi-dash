{
    "time": {
        // Whether to display the time in 24-hour notation or
        // 12-hour notation with AM/PM
        // Values = true | false
        // Optional, default = false
        "display24HourTime": false
    },
    "weather": {
        // An API key for OpenWeatherMap
        "apiKey": "open-weather-map-api-key",
        // The temperature units to use
        // Values = "standard" | "imperial" | "metric"
        // Optional, default = "standard"
        "units": "imperial",
        // How frequently to refresh weather data in seconds
        // Optional, default = 600
        "refreshRateInSecs": 60,
        // Zip code to retrieve weather for, assumes US country code
        "location": 12345
    }
}